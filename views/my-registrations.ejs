<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Registrations - Event Hosting Platform</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container">
    <%- include('partials/flash') %>
    
    <header>
      <h1>âœ… My Registrations</h1>
      <p>Events you are registered for</p>
    </header>

    <% if (events.length === 0) { %>
      <div class="empty-state">
        <h3>You haven't registered for any events yet</h3>
        <p>Browse events and register to attend!</p>
        <a href="/" class="btn btn-success">Browse Events</a>
      </div>
    <% } else { %>
      <div class="events-grid">
        <% events.forEach(event => { %>
          <div class="event-card">
            <span class="category"><%= event.category %></span>
            <h3><%= event.title %></h3>
            <p><strong>ğŸ“… Date:</strong> <%= new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
            <p><strong>ğŸ“ Location:</strong> <%= event.location %></p>
            <p><strong>ğŸ‘¤ Organizer:</strong> <%= event.organizer %></p>
            <% if (event.creator_name) { %>
              <p><strong>Created by:</strong> <%= event.creator_name %></p>
            <% } %>
            <p class="description"><%= event.description.substring(0, 100) %><%= event.description.length > 100 ? '...' : '' %></p>
            
            <div class="capacity-info available">
              âœ… You are registered
            </div>

            <div class="card-actions">
              <a href="/events/<%= event.id %>" class="btn">View Details</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
